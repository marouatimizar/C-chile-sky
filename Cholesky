#include <iostream>
#include <vector>
#include <cmath>
using namespace std;

// Function to perform Cholesky decomposition: A = L * L^T
void choleskyDecomposition(vector<vector<double>> A, int n) {

    // Initialize L matrix with zeros
    vector<vector<double>> L(n, vector<double>(n, 0));

    // Compute L
    for (int i = 0; i < n; i++) {

        for (int j = 0; j <= i; j++) {

            double sum = 0;

            // Summation part
            for (int k = 0; k < j; k++)
                sum += L[i][k] * L[j][k];

            if (i == j) {
                // Diagonal element
                double val = A[i][i] - sum;

                if (val <= 0) {
                    cout << "Matrix is not positive definite.\n";
                    return;
                }

                L[i][j] = sqrt(val);
            }
            else {
                // Offâ€“diagonal element
                L[i][j] = (A[i][j] - sum) / L[j][j];
            }
        }
    }

    // Print L matrix
    cout << "\nMatrix L:\n";
    for (auto row : L) {
        for (double v : row)
            cout << v << "\t";
        cout << endl;
    }

    // Compute determinant = (product of diagonal(L))^2
    double det = 1;
    for (int i = 0; i < n; i++)
        det *= L[i][i];
    det = det * det;

    cout << "\nDeterminant of A = " << det << endl;
}

int main() {

    int n;
    cout << "Give me n: ";
    cin >> n;

    vector<vector<double>> A(n, vector<double>(n));

    cout << "\n--- Input Matrix A ---\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++) {
            cout << "A[" << i+1 << "][" << j+1 << "] = ";
            cin >> A[i][j];
        }

    choleskyDecomposition(A, n);

    return 0;
}